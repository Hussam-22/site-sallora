---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import BestSellingSection from "@components/sections/landing/BestSellingSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ProductsFamilySection from "@components/sections/landing/ProductsFamilySection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import WorldMap from "@components/sections/landing/WorldMap.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
// import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import FeaturesStatsAlt from "@/components/sections/features/FeaturesStatsAlt.astro";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  /> -->

  <HeroSection
    title=`A Treasure Trove of Flavors!`
    subTitle="Indulge in the finest Arabic sweets, vibrant spices, and gourmet essentials like olive oil and murabba. Tradition starts here."
    secondaryTitle="Bringing the Taste of Home to Your Table!"
    primaryBtn="Explore our Products"
    primaryBtnURL="/products"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <!-- <HeroSectionAlt
    title="Sallora Uglo"
    subTitle="Best Sweets in Europe"
    url="google.com"
  /> -->

  <ProductsFamilySection
    title="Our Exclusive Product Range"
    subTitle="We are the sole supplier for Sallora Food Products, Sallora Uglo, and Asala Products across Europe."
  />

  <BestSellingSection />

  <FeaturesStatsAlt
    title="Why Choose Salloura?"
    subTitle="At Sallora, quality begins at the source. We pride ourselves on selecting only the finest ingredients to create products that are both authentic and exceptional. From our food products to our signature Arabic sweets, every item is crafted with care and precision, staying true to tradition while meeting modern standards."
    benefits={[
      {
        title: "Authentic Arabic Sweets",
        content: `Our Sallora Uglo sweets are made using traditional ingredients such as سمن بلدي (clarified butter) for an unmistakable richness and flavor. Each piece is a celebration of heritage, offering a taste that feels like home.`,
      },
      {
        title: `Organic and Natural Sources`,
        content: `We prioritize health and sustainability by sourcing organic ingredients for our food products. From grains to spices, every element is carefully chosen to deliver the purest taste without compromise.`,
      },

      {
        title: `Locally and Ethically Sourced`,
        content: `Our commitment to ethical sourcing ensures that all our products support local farmers and producers. By choosing Sallora, you contribute to a supply chain rooted in integrity and sustainability.`,
      },

      {
        title: `No Artificial Additives`,
        content: `Our products are free from artificial additives, ensuring a wholesome experience with every bite. We believe in letting the natural flavors of our ingredients shine.`,
      },
    ]}
  />

  <WorldMap />

  <TestimonialsSection
    title="Fast-Track Your Projects"
    subTitle="At ScrewFast, we ensure a swift start with instant account setup. Experience the speed of construction redefined."
    ;
    testimonials={[
      {
        content:
          "ScrewFast dramatically boosted our project efficiency. Setup was instant, and their rapid response times are phenomenal. Truly a game-changer in hardware and construction support!",
        author: "Samantha Ruiz",
        role: "Chief Operating Officer | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "customers equipped — from DIY to major construction firms",
      },
      {
        count: "35%",
        description:
          "uptick in project efficiency with ScrewFast tools and services",
      },
      {
        count: "15.3%",
        description:
          "reduction in maintenance costs reported by long-term clients",
      },
      {
        count: "2x",
        description: "quicker assembly using innovative fastening solutions",
      },
    ]}
  />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="ScrewFast is an open-source template, meticulously crafted with Astro, Tailwind CSS, and Preline UI frameworks."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
