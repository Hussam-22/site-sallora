---
import { Image } from "astro:assets";
import LinkButton from "../buttons/LinkButton.astro";

const {
  title,
  subTitle,
  ImageSrc,
  bgColor,
  cardWidth,
  btnColor,
  btnText,
  textColor = "text-black",
  totalProducts,
} = Astro.props;
---

<div
  class:list={[
    "group relative h-[300px] overflow-hidden rounded-3xl",
    bgColor,
    cardWidth,
    textColor,
  ]}
>
  <div class="relative z-10 flex flex-col space-y-3 p-8">
    <h2 class="z-10 text-4xl font-bold">{title}</h2>
    <p class="z-10 w-2/3 text-sm">{subTitle}</p>
    {
      totalProducts && (
        <p class="z-10 w-2/3 text-sm text-black">{totalProducts} Products</p>
      )
    }
    <LinkButton title="view products" bgColor={btnColor} url="/products" />
  </div>
  <Image
    src={ImageSrc}
    alt="Card Image"
    class="absolute -bottom-24 -right-16 z-0 h-80 w-80 object-contain transition-transform duration-300 group-hover:scale-110"
  />
  <!-- <div
    class="absolute inset-0 z-0 bg-gradient-to-r from-black to-transparent opacity-25"
  >
  </div> -->
</div>
