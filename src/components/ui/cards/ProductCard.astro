---
import { Image } from "astro:assets";
import QuickAddRemoveCartButton from "@/components/react/quick-add-remove-cart-btn";

const {
  title,
  price,
  imageSrc,
  family,
  link,
  id,
  class: classStyle,
} = Astro.props;

interface Props {
  title: string;
  price: number;
  description: string;
  imageSrc: any;
  family: Array<string>;
  link: string;
  id: string;
  class?: string;
}

const product = {
  title,
  price,
  id,
  imageSrc,
  family,
  link,
};
---

<!-- component -->
<div
  class:list={[
    "flex h-full max-w-[720px] flex-col overflow-hidden rounded-3xl bg-white",
    classStyle,
  ]}
>
  <!-- Centering wrapper -->

  <Image
    src={imageSrc}
    alt="ui/ux review check"
    class="h-80 rounded-xl object-contain sm:h-64"
    loading={"lazy"}
  />
  <div class="border-b-4 border-t border-b-primary border-t-zinc-100 px-6 py-4">
    <p class="mb-1 text-xs text-zinc-400">
      #{family}
    </p>
    <p
      class="block font-sans text-2xl font-semibold leading-snug tracking-normal antialiased"
    >
      {title}
    </p>
    <div class="flex flex-row items-center justify-between">
      <p class="text-lg font-bold">{price} â‚¬</p>
      <!-- <LinkButton
            title="View Product"
            url={link}
            bgColor="bg-primary"
            class="rounded-3xl px-2 py-2 text-sm text-white hover:bg-black"
          /> -->
      <QuickAddRemoveCartButton product={product} client:visible />
    </div>
  </div>
</div>
