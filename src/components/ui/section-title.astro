---
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}
---

<div class="mx-auto mb-16 w-full max-w-screen-lg space-y-2 text-center">
  <h2
    class="text-balance text-5xl font-bold leading-tight text-primary-content sm:text-5xl"
  >
    {title}
  </h2>
  {subTitle && <p class="text-pretty leading-tight">{subTitle}</p>}
</div>
