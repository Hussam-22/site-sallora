---
// Import the necessary dependencies
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import ReviewComponent from "@components/ui/blocks/ReviewComponent.astro";
import HeroCardsCarousel from "@/components/ui/carousel/HeroCardsCarousel.astro";
import Logo from "src/assets/images/logo.png";

// Define props from Astro
const {
  title,
  subTitle,
  secondaryTitle,
  primaryBtn,
  primaryBtnURL,
  secondaryBtn,
  secondaryBtnURL,
  withReview,
  avatars,
  starCount,
  rating,
  reviews,
  src,
  alt,
} = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  secondaryTitle?: string;
  primaryBtn?: string;
  primaryBtnURL?: string;
  secondaryBtn?: string;
  secondaryBtnURL?: string;
  withReview?: boolean;
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
  src?: any;
  alt?: string;
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="mx-auto mt-10 grid gap-1 overflow-hidden rounded-2xl bg-gradient-to-br from-primary/40 to-base-100 sm:grid-cols-2 sm:items-center sm:gap-8 sm:bg-gradient-to-r sm:pl-8"
>
  <!-- Title and description -->
  <div class="px-6 pb-6 pt-16 text-center sm:py-0 sm:pl-6 sm:text-left">
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="block whitespace-nowrap text-balance text-5xl font-bold tracking-tight text-black lg:text-7xl lg:leading-none"
    >
      <!-- About Fragment: https://docs.astro.build/en/basics/astro-syntax/#fragments -->
      <Fragment set:html={title} />
    </h1>
    {
      subTitle && (
        <h2 class="text-md mt-3 text-pretty leading-relaxed text-black lg:w-4/5">
          {subTitle}
        </h2>
      )
    }
    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 flex w-full flex-col-reverse gap-3 sm:flex-row">
      {primaryBtn && <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />}
      {
        (
          <ReviewComponent
            starCount={starCount}
            rating={rating}
            reviews={reviews}
          />
        )
      }
    </div>
  </div>

  <HeroCardsCarousel />
</section>
