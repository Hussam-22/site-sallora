---
import CardComponent from "@/components/ui/blocks/CardComponent.astro";
import asala from "@/assets/images/cards/asala-card-bg.png";
import sallora from "@/assets/images/cards/sallora-food-card-bg.png";
import salloraUglo from "@/assets/images/cards/sallora-uglo-card-bg.png";

// Define props from Astro
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <div class="flex w-full flex-col justify-center gap-4">
    <div class="flex-g flex flex-row gap-4">
      <CardComponent
        title="Salloura Uglo"
        subTitle="Discover the rich and authentic flavors of Salloura Uglo, where tradition meets excellence. Our products are crafted with the finest ingredients to bring you a taste of heritage and quality. Indulge in the delightful experience of our carefully curated selection, perfect for any occasion."
        ImageSrc={asala}
        bgColor="bg-primary"
        btnColor="bg-black"
      />
      <CardComponent
        title="Salloura Food Products"
        subTitle="SDiscover the rich and authentic flavors of Salloura Uglo, where tradition meets excellence. Our products are crafted with the finest ingredients to bring you a taste of heritage and quality. Indulge in the delightful experience of our carefully curated selection, perfect for any occasion."
        ImageSrc={sallora}
        bgColor="bg-secondary"
        btnColor="bg-black"
      />
    </div>
    <div class="flex-g flex flex-row gap-4">
      <CardComponent
        title="Asala Products"
        subTitle="Discover the rich and authentic flavors of Salloura Uglo, where tradition meets excellence. Our products are crafted with the finest ingredients to bring you a taste of heritage and quality. Indulge in the delightful experience of our carefully curated selection, perfect for any occasion."
        ImageSrc={salloraUglo}
        bgColor="bg-accent"
        cardWidth="w-2/3"
        btnColor="bg-black"
      />
      <CardComponent
        title="Explore Our Products"
        subTitle="Discover the rich and authentic flavors of Salloura Uglo, where tradition meets excellence."
        ImageSrc={salloraUglo}
        bgColor="bg-white"
        cardWidth="w-1/3"
        btnColor="bg-black"
        textColor="text-black"
      />
    </div>
  </div>
</section>
